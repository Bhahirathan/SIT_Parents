<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/grad">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".intro"
    android:id="@+id/l"
    android:layout_gravity="center_vertical"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/tx"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/white"
        android:text="COURSES OFFERED"
        android:textStyle="bold"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:paddingBottom="2sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:background="@color/colorAccent"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tx"
        android:fontFamily="@font/bahnschrift"
        android:text="U.G. COURSES"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="16sp"
        android:paddingStart="20sp"
        android:background="#FBAE5B"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20sp"
        android:paddingTop="2sp"
        android:drawableEnd="@drawable/sj"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tx1"
        android:fontFamily="@font/tcb"
        android:text="B.E. Mechanical Engg.*\nB.E.Computer Science &amp; Engg.*\nB.E.Electronics &amp; Communication Engg.\nB.E.Electrical &amp; Electronics Engg.\nB.Tech. Information Technology*\nB.E. Civil Engineering\nB.Tech. Chemical Engineering\nB.E. Agriculture Engineering\nB.E. Biomedical Engineering\nB.Tech Bio-Technology**\nB.Tech Computer Science &amp; Business Systems**\n"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="14sp"
        android:background="#FAFA0D"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tx2"
        android:text="P.G. COURSES"
        android:fontFamily="@font/bahnschrift"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="16sp"
        android:paddingStart="20sp"
        android:background="#FBAE5B"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tcb"
        android:paddingStart="20sp"
        android:paddingTop="2sp"
        android:paddingBottom="3sp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tx3"
        android:text="M.E. CAD/CAM\nM.E. Communication Systems\nM.E. Computer Science &amp; Engg.\nM.E. Power Electronics and Drives\nM.E. Structural Engineering"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="14sp"
        android:background="#FAFA0D"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tx4"
        android:fontFamily="@font/bahnschrift"
        android:text="DOCTORAL DEGREE PROGRAMMES"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="16sp"
        android:paddingStart="20sp"
        android:background="#FBAE5B"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />
    <TextView
        android:id="@+id/tx6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tcb"
        android:paddingStart="20sp"
        android:paddingBottom="3sp"
        android:paddingTop="2sp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tx5"
        android:text="Ph.D in Mechanical Engineering\nPh.D in Computer Science and Engg.\nPh.D in Electrical Engineering\nPh.D in Electronics &amp; Communication Engg\nPh.D in Civil Engineering\nPh.D in Physics"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="14sp"
        android:background="#FAFA0D"
        android:textAppearance="@style/Widget.MaterialComponents.TextView"
        tools:ignore="HardcodedText,PrivateResource,RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:theme="@style/Theme.MaterialComponents"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx6"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15sp"
        android:layout_marginRight="50sp"
        android:layout_gravity="center_horizontal"
        android:text="       Skip"
        android:drawableRight="@android:drawable/ic_media_next"
        tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>
</ScrollView>